<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.phonegap.getting.started"
	version 	= "1.0.0">

	<name>Blackberry: Getting Started</name>

	<description>
		A template for getting started with PhoneGap development and build.phonegap.com
	</description>

	<author href="http://sbsdegb1.github.com"
		email="sbsdegb1@googlemail.com">
		Gary Bennison
	</author>

         <license href="http://opensource.org/licenses/alphabetical">
  </license>
        
        <!-- PhoneGap API -->
       <feature name="blackberry.system" required="true" version="1.0.0.0" />
       <feature name="phonegap" required="true" version="0.9.6" />
       <feature name="blackberry.find" required="true" version="1.0.0.0" />
       <feature name="blackberry.identity" required="true" version="1.0.0.0" />
       <feature name="blackberry.pim.Address" required="true" version="1.0.0.0" />
       <feature name="blackberry.pim.Contact" required="true" version="1.0.0.0" />
       <feature name="blackberry.io.file" required="true" version="1.0.0.0" />
       <feature name="blackberry.utils" required="true" version="1.0.0.0" />
       <feature name="blackberry.io.dir" required="true" version="1.0.0.0" />
       <feature name="blackberry.app" required="true" version="1.0.0.0" />
       <feature name="blackberry.app.event" required="true" version="1.0.0.0" />


	<gap:platforms>
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="icon.png" gap:role="default" />
        
        <feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>

        <!-- Expose access to all URIs, including the file and http protocols -->
        <access subdomains="true" uri="*" />

	<!-- sample preference specification -->
	<!-- <preference name="autorotate" value="false" readonly="true"/> -->
</widget>
